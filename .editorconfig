# http://editorconfig.org
# # sublime-text plugin : https://github.com/sindresorhus/editorconfig-sublime#readme
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.hbs]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

